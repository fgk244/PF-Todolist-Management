<!DOCTYPE html>
<html>
  <head>
    <title>Todom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="Logo navbar-brand p-3" href="/">
            <%= link_to root_path, class:"header-title" do %>
             <div>Todom</div>
            <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav lists-right">
                <% if signed_in? %>


                <!--<li class= "nav-item">
                  <button class="btn btn-default"><%#= link_to "Top", root_path, class: "link" %></button>
                </li>
                -->

                 <li class= "nav-item">
                   <button class="btn btn-default"><%= link_to "About",homes_about_path, class: "link" %></button>
                </li>

                 <li class= "nav-item">
                 <button class="btn btn-default"><%= link_to "ログアウト",logout_path, method: :delete, class: "link" %></button>
                </li>

                <li class= "nav-item">
                 <button class="btn btn-default"><%= link_to "TODO",todos_path, class: "link" %></button>
                </li>

                 <li class= "nav-item">
                 <button class="btn btn-default"><%= link_to "退会", home_withdraw_path, class: "link" %></button>
                </li>

                <% else %>

                 <li class= "nav-item">
                  <button class="btn btn-default"><%= link_to "Top", root_path, class: "link" %></button>
                </li>

                 <li class= "nav-item">
                   <button class="btn btn-default"><%= link_to "About",homes_about_path, class: "link" %></button>
                </li>


                <li class= "nav-item">
                  <button class="btn btn-default"><%= link_to "新規登録",new_user_path, class: "link" %></button>
                </li>

                <li class= "nav-item">
                 <button class="btn btn-default"><%= link_to "ログイン",login_path, class: "link" %></button>
                </li>

                <% end %>


              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto" style="font-family: 'Kiwi Maru', serif;">
    <%= notice %>
    <%= yield %>
    </main>

  </body>





</html>
