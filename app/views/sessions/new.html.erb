<div class="container">
    <%= form_for(:session, url: login_path) do |f| %>

      <p class="row col-2">
      <%= f.label :email, "メール" %>
      <%= f.text_field :mail %>
      <p>

      <p class="row col-2">
      <%= f.label :password, "パスワード" %>
      <%= f.text_field :password %>
      <p>

      <p class="row col-2">
      <%= f.submit "ログイン" %>
      <p>

    <% end %>
</div>