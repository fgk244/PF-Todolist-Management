<div class='container'>


<div class='row'>
    <h3 class="col-8 mt-3 ">TODO一覧</h3>
  </div>


 <table class='table table-hover '>
  　<thead>
    <tr>
      <th class="col-1">日付</th>
      <th class="col-3">内容</th>
      <th class="col-2">メモ</th>
    </tr>
    </thead>
    <tbody>
    <% @todos.each do |todo| %>
    　<tr>
        <td><%= todo.date %></td>
        <td><%= todo.contents %></td>
        <td><%= todo.memo %></td>
      </tr>
    <% end %>
    </tbody>
 </table>




   <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h3 class="my-3">TODO入力</h3>

　    <%= form_with model: @todo, local:true do |f| %>
　     <div class="form-group">
        <%= f.label :日付 %>
        <%= f.date_field :date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :内容 %>
        <div class="input-group">
          <%= f.text_field :contents, placeholder: "（例）タスク整理 など", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :メモ %>
        <%= f.text_area :memo, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
　</div>




</div>